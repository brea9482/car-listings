<h1>New Manufacturer</h1>
  <% if @manufacturer.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @manufacturer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_for @manufacturer do |f| %>
    <div class="form-group">
      <%= f.label :name, "Name"%>
      <%= f.text_field :name, placeholder: "Name *" %>
    </div>
    <div class="form-group">
      <%= f.label :country, "Country"%>
      <%= f.select :country, options_for_select(Manufacturer::COUNTRIES) %>
    </div>
    <p>
      <%= f.submit "Submit new manufacturer", class: "small button" %>
    </p>
  <% end %>

  <%= link_to "Back", root_path%>
